@model IEnumerable<ImprovementTracker.Models.Improvement>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-4">
        @foreach (var item in Model)
        {
            <div class="list-item" data-url=@Url.RouteUrl("defaultapi", new { httproute = "", controller = "ImprovementsApi", id = item.Id }) >
                <h4>@item.Description</h4>                
            </div>
        } 
    </div>
    <div id="selectedDetail" class="col-md-8">       
        <dl class="dl-horizontal">
            <dt>
                Description
            </dt>

            <dd id="DescriptionText">
               
            </dd>
        </dl>
    </div>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
